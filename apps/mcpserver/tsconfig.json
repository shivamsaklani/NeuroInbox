{
  "compilerOptions": {
    /* Runtime */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    /* Output */

    "noEmit": true,

    /* Performance (CRITICAL) */
    "skipLibCheck": true,
    "incremental": false,
    "composite": false,
    "disableReferencedProjectLoad": true,
    "disableSourceOfProjectReferenceRedirect": true,

    /* Safety */
    "strict": true,

    /* Node */
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts","types/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo"
  ]
}
